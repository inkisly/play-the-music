<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent">
	<ImageView android:id="@+id/ivType"
		android:layout_height="32dp" android:layout_width="32dp" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"></ImageView>
	<TextView android:text="TextView" android:layout_height="wrap_content"
		android:layout_width="match_parent" android:id="@+id/tvFileName" android:layout_alignParentTop="true" android:layout_toRightOf="@+id/ivType"></TextView>
	<TextView android:text="TextView" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/tvLastModified" android:layout_toRightOf="@+id/ivType" android:layout_below="@+id/tvFileName"></TextView>
</RelativeLayout>
