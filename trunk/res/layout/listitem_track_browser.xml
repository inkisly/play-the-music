<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent">
	<TextView android:text="TextView"
		android:layout_alignParentTop="true" android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:id="@+id/tvTitle"
		android:layout_alignParentLeft="true"></TextView>
	<TextView android:text="TextView" android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:id="@+id/tvArtist"
		android:layout_below="@+id/tvTitle"></TextView>
	<TextView android:text="TextView" android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:id="@+id/tvDuration"
		android:layout_alignParentRight="true" android:layout_alignParentTop="true"></TextView>
</RelativeLayout>
