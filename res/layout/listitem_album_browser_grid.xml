<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:orientation="vertical" android:gravity="top|center_horizontal">
	<ImageView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/ivAlbumArt"></ImageView>
	<TextView android:text="TextView" android:id="@+id/tvAlbumTitle"
		android:layout_height="wrap_content" android:ellipsize="marquee"
		android:marqueeRepeatLimit="marquee_forever" android:layout_width="match_parent"
		android:gravity="center" android:singleLine="true"></TextView>
	<TextView android:text="TextView" android:id="@+id/tvArtist"
		android:layout_height="wrap_content" android:gravity="center"
		android:marqueeRepeatLimit="marquee_forever" android:ellipsize="marquee"
		android:layout_width="match_parent" android:singleLine="true"></TextView>
</LinearLayout>
